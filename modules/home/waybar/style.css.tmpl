* {
    border: none;
    font-family: JetBrainsMono Nerd Font, Font Awesome, Arial, sans-serif;
    font-size: 13px;
    /* FIX: Använd pywals primära förgrundsfärg */
    color: {foreground};
    border-radius: 20px;
}

window#waybar {
    background: rgba(0, 0, 0, 0);
}

/* Tooltip som dynamiskt ändras */
tooltip {
    /* FIX: Använd pywals primära förgrunds- och bakgrundsfärger */
    color: {foreground};
    background-color: rgba({background.rgb}, 0.85); /* .rgb ger oss R,G,B-värdena */
    border-radius: 8px;
    padding: 5px 10px;
}

/* Moduler */
#cpu, #idle_inhibitor, #memory, #bluetooth, #network, #battery {
    padding: 0 10px;
}

#custom-power {
    border-radius: 100px;
    margin: 5px;
    padding: 1px 6px;
}

#custom-resourcemon {
    margin-right: 12px;
}

#custom-battery {
    padding: 0 10px;
    /* FIX: Använd pywals primära förgrundsfärg som standard */
    color: {foreground};
}

/* När batteriet laddas (klass från skriptet) */
#custom-battery.charging {
    /* FIX: Använd en accentfärg (ofta grön) */
    color: {color2};
}

/* När batterinivån är låg (klass från skriptet) */
#custom-battery.warning {
    /* FIX: Använd en accentfärg (ofta gul/orange) */
    color: {color3};
}

/* När batterinivån är kritisk (klass från skriptet) */
#custom-battery.critical {
    /* FIX: Använd en accentfärg (ofta röd) */
    color: {color1};
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

/* Enkel blink-animation för kritiskt läge */
@keyframes blink {
    to {
        opacity: 0.5;
    }
}